alias v='vagrant '
alias vs='vagrant status'
alias l='less'
alias ll='ls -al'
alias ls='ls -G'
alias sl='ls -al'
alias rm='rmtrash'
alias tailf='tail -f'
alias sudo='sudo '
alias pgdiff='peco-git-diff'
alias cdg='peco-git-cd'
alias sshc='peco-sshconfig-ssh-with-ip'
alias ssha='sshadd'
alias sshi='cat ~/.ssh/conf.d/*.conf > ~/.ssh/config; ssha'
alias pga='peco-git-atom'
alias pgs='peco-git-sublimetext'
alias ngrep='ngrep -W byline'
